{{!
    @template local_adminer/back_to_moodle

    Show a back button on top of the adminer window

    Context variables required for this template:
    * title The button title
    * url   The url the button points to

    Example context (json):
    {
        "title": "Back to Moodle",
        "url": "http://example.com"
    }
}}

<div>
    <form method="get" action="{{{url}}}">
        <button type="submit" class="btn btn-warning form-control my-1 border-danger">
            <i class="fa fa-graduation-cap fa-fw mx-1"></i><span>{{title}}</span>
        </button>
    </form>
</div>
