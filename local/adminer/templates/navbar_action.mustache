{{!
    @template local_adminer/navbar_action

    A template printing an icon on the navigation bar.

    Context variables required for this template:
    * url - String

    Example context (json):
    {
        "url": "https://example.com/local/invitation/invite.php?courseid=2"
    }
}}

<div class="local-adminer-nav-action">
    <a id="local-adminer-action-{{uniqid}}" href="{{{url}}}" class="nav-link icon-no-margin" target="_blank">
        <i class="icon fa fa-database fa-fw navicon" title="{{#str}} pluginname, local_adminer {{/str}}"></i>
    </a>
</div>
